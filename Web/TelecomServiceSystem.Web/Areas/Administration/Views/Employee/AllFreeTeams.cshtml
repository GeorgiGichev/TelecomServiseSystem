@model TelecomServiceSystem.Web.ViewModels.Administration.Administration.TeamAllViewModel

@{ this.ViewData["Title"] = "All teams by city"; }

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Free teams by city</h3></div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="col-md-4"></div>
                        <a class="btn btn-primary col-md-4" asp-area="Administration" asp-controller="Employee" asp-action="CreateTeam" asp-route-employeeId="@Model.EmployeeId" asp-route-cityId="@Model.CityId">Create new team</a>
                        <div class="col-md-4"></div>
                    </div>
                    <div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>City</th>
                                            <th>Team</th>
                                            <th>Free positions</th>
                                            <th>Add to team</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>City</th>
                                            <th>Team</th>
                                            <th>Free positions</th>
                                            <th>Add to team</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var team in Model.Teams)
                                        {
                                         <tr>
                                             <td>@team.CityName</td>
                                             <td>@team.Name</td>
                                             <td>@team.FreePositions</td>
                                             <td><a class="btn btn-primary" asp-area="Administration" asp-controller="Employee" asp-action="AddToTeam" asp-route-teamId="@team.Id" asp-route-employeeId="@Model.EmployeeId">Add employee</a></td>
                                         </tr>
                                         }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-6 col-md-offset-2">
                    <section>
                    </section>
                </div>
            </div>
        </div>


    </div>
</div>
