@model TelecomServiceSystem.Web.ViewModels.Customers.CustomersAddressInputModel
        <!-- Modal -->
<div class="modal fade" id="addAddress">
    <div class="modal-dialog" role="form">
        <div class="modal-content container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Create address</h3></div>
                        <div class="card-body">
                            <!-- Modal content-->
                            <div class="modal-body">
                                <form asp-controller="Addresses" asp-action="Create" method="post" id="form">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-row">
                                        
                                        <div class="form-group col-md-12">
                                            <label class="col-md-6 required" asp-for="@Model.CityId">City</label>
                                            <select class="col-md-6 form-control" id="cities" asp-for="@Model.CityId">
                                                @foreach (var city in Model.Cities)
                                                {
                                                <option value="@city.Id">@city.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label class="required" asp-for="@Model.Street"></label>
                                            <input asp-for="@Model.Street" class="form-control" />
                                            <span asp-validation-for="@Model.Street" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label class="required" asp-for="@Model.Neighborhood"></label>
                                            <input asp-for="@Model.Neighborhood" class="form-control" />
                                            <span asp-validation-for="@Model.Neighborhood" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-3">
                                            <label class="required" asp-for="@Model.Number"></label>
                                            <input asp-for="@Model.Number" class="form-control" />
                                            <span asp-validation-for="@Model.Number" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label asp-for="@Model.Entrance"></label>
                                            <input asp-for="@Model.Entrance" class="form-control" />
                                            <span asp-validation-for="@Model.Entrance" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label asp-for="@Model.Floor"></label>
                                            <input asp-for="@Model.Floor" class="form-control" />
                                            <span asp-validation-for="@Model.Floor" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-md-3">
                                            <label asp-for="@Model.Apartment"></label>
                                            <input asp-for="@Model.Apartment" class="form-control" />
                                            <span asp-validation-for="@Model.Apartment" class="text-danger"></span>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-save="modal" id="submit" data-dismiss="modal">Submit</button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Cloce</button>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

