@model TelecomServiceSystem.Services.Models.Bills.BillViewModel
    <!DOCTYPE html>
    <html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <div class="card">
                <div class="card-header" style="background-color: skyblue">
                    <span><strong>TSS</strong></span>
                    <span class="float-right">
                        Invoice from:
                        <strong>@DateTime.UtcNow.ToShortDateString()</strong>
                    </span>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-sm-6 float-left">
                            <h6 class="mb-3">To:</h6>
                            <div>
                                <strong>@Model.Name</strong>
                            </div>
                            <div>Email: @Model.Email</div>
                        </div>

                        <div class="col-sm-6 float-right">
                            <h6 class="mb-3">From:</h6>
                            <div>
                                <strong>TelecomServiceSystem</strong>
                            </div>
                            <div>Attn: Georgi Gichev</div>
                            <div>9010 Varna, Bulgaria</div>
                            <div>Email: customerService@tss.com</div>
                            <div>Phone: +359 866 123 456</div>
                        </div>
                    </div>
                    <hr />
                    <div class="table-responsive-sm">
                        <table class="table table-bordered table-striped table-hover" style="background-color:skyblue">
                            <thead>
                                <tr>
                                    <th>Service number</th>
                                    <th>Service plan</th>
                                    <th>Service price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in Model.ServicesInfo)
                                {
                                    <tr>
                                        <td class="left strong">@service.ServiceNumberNumber</td>
                                        <td class="left">@service.ServiceName</td>
                                        <td class="right">@service.ServicePrice.ToString("F2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-sm-5">
                        </div>
                        <div class="col-lg-4 col-sm-5 ml-auto">
                            <table class="table table-striped table-bordered" style="background-color:skyblue">
                                <tbody>
                                    <tr>
                                        <td class="left">
                                            <strong>Amount without VAT</strong>
                                        </td>
                                        <td class="right">@Model.AmountWithoutVAT.ToString("F2")</td>
                                    </tr>
                                    <tr>
                                        <td class="left">
                                            <strong>VAT (20%)</strong>
                                        </td>
                                        <td class="right">@Model.VAT</td>
                                    </tr>
                                    <tr>
                                        <td class="left">
                                            <strong>Total</strong>
                                        </td>
                                        <td class="right">
                                            <strong>@Model.Amount.ToString("F2") lv.</strong>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>