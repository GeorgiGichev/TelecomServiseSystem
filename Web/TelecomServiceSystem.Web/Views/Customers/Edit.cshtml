@model TelecomServiceSystem.Web.ViewModels.Customers.CustomerEditViewModel

@{ this.ViewData["Title"] = "Edit Customer"; }

<partial name="_Buttons" model="@Model.Id">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Customer Account Info</h3></div>
                    <div class="card-body">
                        <form asp-route-returnUrl="" asp-action="edit" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="required" asp-for="@Model.FirstName"></label>
                                    <input asp-for="@Model.FirstName" class="form-control" />
                                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="@Model.MiddleName"></label>
                                    <input asp-for="@Model.MiddleName" class="form-control" />
                                    <span asp-validation-for="@Model.MiddleName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="required" asp-for="@Model.LastName"></label>
                                    <input asp-for="@Model.LastName" class="form-control" />
                                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="required" asp-for="@Model.PersonalNumber"></label>
                                    <input asp-for="@Model.PersonalNumber" class="form-control" />
                                    <span asp-validation-for="@Model.PersonalNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="@Model.Email"></label>
                                    <input asp-for="@Model.Email" class="form-control" />
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="required" asp-for="@Model.Phone"></label>
                                    <input asp-for="@Model.Phone" class="form-control" />
                                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label class="col-md-6 required" for="DocumentType">Document type:</label>
                                    <select class="col-md-6 form-control" asp-for="@Model.DocumentType">
                                        <option value="1">Id Card</option>
                                        <option value="2">Passport</option>
                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
                            <a class="btn btn-primary btn-block"
                               asp-area="" asp-controller="Customers" asp-action="Search">Close</a>
                            <div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Country</th>
                                                    <th>City</th>
                                                    <th>Street</th>
                                                    <th>Neighborhood</th>
                                                    <th>Number</th>
                                                    <th>Entrance</th>
                                                    <th>Floor</th>
                                                    <th>Apartment</th>
                                                </tr>
                                            </thead>
                                            <tfoot>
                                                <tr>
                                                    <th>Country</th>
                                                    <th>City</th>
                                                    <th>Street</th>
                                                    <th>Neighborhood</th>
                                                    <th>Number</th>
                                                    <th>Entrance</th>
                                                    <th>Floor</th>
                                                    <th>Apartment</th>
                                                </tr>
                                            </tfoot>
                                            <tbody>
                                                @foreach (var address in Model.Addresses)
                                                {
                                                <tr>
                                                    <td>@address.Country</td>
                                                    <td>@address.City</td>
                                                    <td><a asp-area="" asp-controller="Address" asp-action="Edit" asp-route-id="@address.Id">@address.Street</a></td>
                                                    <td>@address.Neighborhood</td>
                                                    <td>@address.Number</td>
                                                    <td>@address.Entrance</td>
                                                    <td>@address.Floor</td>
                                                    <td>@address.Apartment</td>
                                                </tr>
}

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-6 col-md-offset-2">
                        <section>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

