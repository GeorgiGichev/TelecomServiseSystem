@model TelecomServiceSystem.Web.ViewModels.CustomersSearch.SearchCustomersViewModel
@{ this.ViewData["Title"] = "Search Customers"; }

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Search Customers</h3></div>
                <div class="card-body">
                    <form asp-route-returnUrl="" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.Input.FirstName"></label>
                                <input asp-for="@Model.Input.FirstName" class="form-control" />
                                <span asp-validation-for="@Model.Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.Input.MiddleName"></label>
                                <input asp-for="@Model.Input.MiddleName" class="form-control" />
                                <span asp-validation-for="@Model.Input.MiddleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.Input.LastName"></label>
                                <input asp-for="@Model.Input.LastName" class="form-control" />
                                <span asp-validation-for="@Model.Input.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.Input.PersonalNumber"></label>
                                <input asp-for="@Model.Input.PersonalNumber" class="form-control" />
                                <span asp-validation-for="@Model.Input.PersonalNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Search</button>
                    </form>
                </div>
                <div class="col-md-6 col-md-offset-2">
                    <section>
                    </section>
                </div>
            </div>
        </div>

        <div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Middle Name</th>
                                <th>Last Name</th>
                                <th>Personal Number</th>
                                <th>Created On</th>
                                <th>Deleted On</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>First Name</th>
                                <th>Middle Name</th>
                                <th>Last Name</th>
                                <th>Personal Number</th>
                                <th>Created On</th>
                                <th>Deleted On</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var customer in Model.CustomersList)
                            {
                                <tr>
                                    <td>@customer.FirstName</td>
                                    <td>@customer.MiddleName</td>
                                    <td>@customer.LastName</td>
                                    <td><a asp-area="" asp-controller="Customers" asp-action="Edit" asp-route-id="@customer.Id">@customer.PersonalNumber</a></td>
                                    <td>@customer.CreatedOn</td>
                                    <td>@customer.DeletedOn</td>
                                </tr>}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
