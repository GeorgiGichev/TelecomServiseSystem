@model TelecomServiceSystem.Web.ViewModels.Invoices.InvoicesCustomerViewModel
@{ this.ViewData["Title"] = "All invoices"; }

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <partial name="_Buttons" model="@Model.CustomerId">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Invoices</h3></div>
                    <div class="card-body">
                        <div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Created on</th>
                                                <th>Link</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Created on</th>
                                                <th>Link</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var invoice in Model.Invoices)
                                            {
                                <tr>
                                    <td class="col-md-4">@invoice.CreatedOn.ToShortDateString()</td>
                                    <td class="col-md-8"><a href="@invoice.Url" target="_blank">@invoice.Url</a></td>
                                </tr>
}

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-md-offset-2">
                        <section>
                        </section>
                    </div>
            </div>
        </div>
    </div>
</div>

