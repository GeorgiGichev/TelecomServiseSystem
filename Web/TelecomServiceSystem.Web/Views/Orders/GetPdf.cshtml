@*@model TelecomServiceSystem.Services.Models.BillViewModel*@
<!DOCTYPE html>
<html>
<head>
    <link href="~/css/styles.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="sb-nav-fixed">
    <div class="container">
        <div class="card">
            <div class="card-header">
                Invoice
                <strong>@DateTime.UtcNow.Date</strong>
                <span class="float-right"> <strong>Status:</strong> Pending</span>
            </div>
            <div class="card-body">
                <div class="form-row">
                    <div class="col-md-6">
                        <h6 class="mb-3">To:</h6>
                        <div>
                            <strong>Name</strong>
                        </div>
                        <div>Email:</div>
                    </div>

                    <div class="col-md-6">
                        <h6 class="mb-3">From:</h6>
                        <div>
                            <strong>TelecomServiceSystem</strong>
                        </div>
                        <div>Attn: Georgi Gichev</div>
                        <div>9010 Varna, Bulgaria</div>
                        <div>Email: customerService@tss.com</div>
                        <div>Phone: +359 866 123 456</div>
                    </div>
                </div>

                <div class="table-responsive-sm">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Service number</th>
                                <th>Service plan</th>
                                <th>Service price</th>

                                <th class="right">Service Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in Model.Services)
                            {
                                <tr>
                                    <td class="left strong">@service.ServiceNumberNumber</td>
                                    <td class="left">@service.ServiceName</td>

                                    <td class="right">@service.ServicePrice</td>
                                    <td class="center">1</td>
                                    <td class="right">@service.ServicePrice</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-4 col-sm-5">
                    </div>
                    <div class="col-lg-4 col-sm-5 ml-auto">
                        <table class="table table-striped table-bordered">
                            <tbody>
                                <tr>
                                    <td class="left">
                                        <strong>Amount without VAT</strong>
                                    </td>
                                    <td class="right">@Model.AmountWithoutVAT</td>
                                </tr>
                                <tr>
                                    <td class="left">
                                        <strong>VAT (20%)</strong>
                                    </td>
                                    <td class="right">@Model.VAT</td>
                                </tr>
                                <tr>
                                    <td class="left">
                                        <strong>Total</strong>
                                    </td>
                                    <td class="right">
                                        <strong>@Model.Amount lv.</strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
</body>
</html>