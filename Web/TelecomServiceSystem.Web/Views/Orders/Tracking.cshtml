@model TelecomServiceSystem.Web.ViewModels.Orders.Search.SearchOrderModel
@{ this.ViewData["Title"] = "Tracking orders"; }

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Order tracking</h3></div>
                <div class="card-body">
                    <form asp-route-returnUrl="" method="post">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.InputModel.ServiceName">Service Name</label>
                                <input asp-for="@Model.InputModel.ServiceName" class="form-control" />
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.InputModel.ServiceType">Service Type</label>
                                <select asp-for="@Model.InputModel.ServiceType" class="form-control">
                                    <option value="@null">-----</option>
                                    <option value="Mobile">Mobile</option>
                                    <option value="Fix">Fix</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.InputModel.Status">Status</label>
                                <select asp-for="@Model.InputModel.Status" class="form-control">
                                    <option value="@null">-----</option>
                                    <option value="ForExecution">ForExecution</option>
                                    <option value="Finished">Finished</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.InputModel.FinishedOn">Finished on</label>
                                <input type="date" asp-for="@Model.InputModel.FinishedOn" class="form-control" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="hidden" asp-for="@Model.InputModel.UserId" class="form-control" />
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="@Model.InputModel.CreatedOn">Created on</label>
                                <input type="date" asp-for="@Model.InputModel.CreatedOn" class="form-control" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-8"></div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary btn-block">Search</button>
                            </div>
                            <div class="col-md-2">
                                <a  asp-controller="Orders" asp-action="Tracking" class="btn btn-primary btn-block">Clear</a>
                            </div>
                        </div>
                        <hr />
                        <div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Dealer</th>
                                                <th>Service</th>
                                                <th>Status</th>
                                                <th>Created on</th>
                                                <th>Finished on</th>
                                                <th>Order id</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Dealer</th>
                                                <th>Service</th>
                                                <th>Status</th>
                                                <th>Created on</th>
                                                <th>Finished on</th>
                                                <th>Order id</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            @foreach (var order in Model.Orders)
                                            {
                                            <tr>
                                                <td>@order.OrderUserUsername</td>
                                                <td>@order.ServiceName</td>
                                                <td>@order.OrderStatus</td>
                                                <td>@order.OrderCreatedOn</td>
                                                <td>@order.OrderFinishedOn</td>
                                                <td>@order.OrderId</td>
                                            </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-6 col-md-offset-2">
                    <section>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>


