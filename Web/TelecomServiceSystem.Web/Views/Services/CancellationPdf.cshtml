@model TelecomServiceSystem.Web.ViewModels.ContractTemplates.CancellationViewModel
@using TelecomServiceSystem.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body class="sb-nav-fixed">
    <div class="container">
        <div class="card-body">
            <div class="row-cols-2">
                <div class="col-md-4">
                    <h4><srtrong>@GlobalConstants.SystemName</srtrong></h4>
                </div>
                <div class="col-md-8 ml-auto">
                    <table class="table table-striped table-bordered">
                        <thead>Споразумение за закриване/прекратяване на договор за електронни съобщителни услуги</thead>
                        <tbody>
                            <tr>
                                <td class="left">
                                    <p>Търговец/Дистрибутор</p>
                                </td>
                                <td class="right">
                                    <p>@Model.UserId</p>
                                </td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <p>Клиентски номер</p>
                                </td>
                                <td class="right">@Model.Id</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card col-md-12 align-items-center">
                    <div class="card-header">
                        Настоящото споразумение се сключва между "Телеком сървис систем", вписано в Търговския регистър
                        на Агенцията по вписванията с ЕИК 100100100, със седалище и адрес на управление: гр.Варна 9000,
                        ул.Незнайна № 1, и
                    </div>
                    <div class="card-header text-center">
                        <strong>АБОНАТ</strong>
                    </div>
                    <div class="card-body border">
                        <table class="" width="100%">
                            <tr>
                                <td class="border" width="100%">
                                    Трите имена по лична карта: <strong>@Model.FullName</strong>
                                </td>
                            </tr>
                        </table>
                        <table class="" width="100%">
                            <tr>
                                <td class="border" width="100%">
                                    ЕГН/ЛНЧ/Номер на паспорт: <strong>@Model.PersonalNumber</strong>
                                </td>
                            </tr>
                        </table>
                        <table class="" width="100%">
                            <tr>
                                <td class="border" width="50%">
                                    Телефон:<strong>@Model.Phone</strong>
                                </td>
                                <td class="border" width="50%">
                                    Email: <strong>@Model.Email</strong>
                                </td>
                            </tr>
                        </table>
                        <table class="" width="100%">
                            <tr>
                                <td class="border" width="7%">
                                    Адрес:
                                </td>
                                <td class="border" width="43%">
                                    Град/село: <strong>@Model.Address.CityName</strong>
                                </td>
                                <td class="border" width="50%">
                                    Кв./ж.к.: <strong>@Model.Address.Neighborhood</strong>
                                </td>
                            </tr>
                        </table>
                        <table class="" width="100%">
                            <tr>
                                <td class="border" width="40%">
                                    Улица: <strong>@Model.Address.Street</strong>
                                </td>
                                <td class="border" width="15%">
                                    №: <strong>@Model.Address.Number</strong>
                                </td>
                                <td class="border" width="15%">
                                    Вх.: <strong>@Model.Address.Entrance</strong>
                                </td>
                                <td class="border" width="15%">
                                    Ет.: <strong>@Model.Address.Floor</strong>
                                </td>
                                <td class="border" width="15%">
                                    Ап.: <strong>@Model.Address.Apartment</strong>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-header text-center">
                        <strong>ДОПЪЛНИТЕЛНО СПОРАЗУМЕНИЕ</strong>
                    </div>
                    <div class="card-body border">
                        <table class="" width="100%">
                            <tr>
                                <td class="border" width="35%">
                                    Предмет на споразумението:
                                </td>
                                <td class="border" width="65%">
                                    Закриване на услуга
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-header text-center">
                        <strong>ДАННИ ЗА УСЛУГАТА</strong>
                    </div>
                    <div class="card-body border">
                        <table class="" width="100%">
                            <tr>
                                <td class="border text-center" width="35%">
                                    Номер
                                </td>
                                <td class="border text-center" width="65%">
                                    Тарифен план
                                </td>
                            </tr>
                            <tr>
                                <td class="border text-center" width="35%">
                                    @Model.Number
                                </td>
                                <td class="border text-center" width="65%">
                                    @Model.Plan
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-header text-center">
                        <strong>АДРЕС НА УСЛУГАТА</strong>
                    </div>
                    <div class="card-body border">
                        <table class="" width="100%">
                            <tr>
                                <td class="border" width="10%">
                                    Адрес:
                                </td>
                                <td class="border" width="90%">
                                    @Model.ServiceAddress
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-header text-center">
                        <strong>КОНТАКТ ОТ СТРАНА НА TSS</strong>
                    </div>
                    <div class="card-body border">
                        <table class="" width="100%">
                            <tr>
                                <td class="border" width="50%">
                                    Телефон за контакт:
                                </td>
                                <td class="border" width="50%">
                                    0866123456
                                </td>
                            </tr>
                        </table>
                        <table class="" width="100%">
                            <tr>
                                <td class="border" width="50%">
                                    Email:
                                </td>
                                <td class="border" width="50%">
                                    CustomerService.TSS@@tss.com
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-header text-center">
                        <table class="" width="100%">
                            <tr>
                                <td class="border" width="50%">
                                    Дата на влизане в сила на споразумението: @DateTime.UtcNow.Date.ToString("dd/MM/yyyy")
                                </td>
                                <td class="border" width="50%">
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-body border">
                        <table class="" width="100%">
                            <tr>
                                <td width="50%">
                                    <strong>За TSS:</strong>
                                </td>
                                <td width="50%">
                                    <strong>За Абонат:</strong>
                                </td>
                            </tr>
                        </table>
                        <table class="" width="100%">
                            <tr>
                                <td width="50%">
                                    ................................................................................
                                </td>
                                <td width="50%">
                                    ................................................................................
                                </td>
                            </tr>
                        </table>
                        <table class="" width="100%">
                            <tr>
                                <td width="50%">
                                    Дата: @DateTime.UtcNow.Date.ToString("dd/MM/yyyy")г.
                                </td>
                                <td width="50%">
                                    Дата: ........................................
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
