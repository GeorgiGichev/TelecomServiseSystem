@model TelecomServiceSystem.Web.ViewModels.Services.ServiceCreateInputModel
@{ this.ViewData["Title"] = "Add service"; }

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Add service</h3></div>
                <div class="card-body">
                    <form asp-route-returnUrl="" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="required" asp-for="@Model.Name">Service name</label>
                                <input asp-for="@Model.Name" class="form-control" />
                                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="required" asp-for="@Model.ServiceType">Service type</label>
                                <select asp-for="@Model.ServiceType" class="form-control">
                                    @foreach (var type in Model.Types)
                                    {
                                        <option value="@type">@type</option>
                                    }
                                </select>
                                <span asp-validation-for="@Model.ServiceType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label class="required" asp-for="@Model.Price">Service price</label>
                                <input asp-for="@Model.Price" class="form-control" />
                                <span asp-validation-for="@Model.Price" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary float-right col-md-3">Create</button>
                    </form>
                </div>
                <div class="col-md-6 col-md-offset-2">
                    <section>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>